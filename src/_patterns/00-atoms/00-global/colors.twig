{# COLORS #}
{# comment out any swatches not needed by your palette #}

{% set colorset = ['wildcat-blue','wildcat-white','wildcat-black','light-blue','medium-blue','dark-blue','light-gray','medum-gray','dark-gray'] %}
{% set othercolors = ['success','info','warning','alert'] %}
<p><b>Official Colors</b></p>

<ul class="sg-colors">
	{% for i in colorset %}
	<li>
		Color {{ i|titleize }} <pre>color({{ i }})</pre>
		<span class="sg-swatch bg-{{ i }}"></span>
	</li>
	{% endfor %}
</ul>

<p><b>Other Colors</b></p>
<ul class="sg-colors">
	{% for i in othercolors %}
	<li>
		Color {{ i|titleize }} <pre>color({{ i }})</pre>
		<span class="sg-swatch bg-{{ i }}"></span>
	</li>
	{% endfor %}
</ul>

