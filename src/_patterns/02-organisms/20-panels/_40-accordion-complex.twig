{% extends 'organisms-accordion-simple' %}

{% block accordion_panels %}
	{% embed 'molecules-accordion-panel' with { accordion_panel_headline : 'Editorial' } %}
		{% block accordion_panel_content %}
			{% include 'organisms-editorial' %}
		{% endblock %}
	{% endembed %}
	{% embed 'molecules-accordion-panel' with { accordion_panel_headline : 'Aside Left' } %}
		{% block accordion_panel_content %}
			{% include 'organisms-editorial' with { editorial_style : 'editorial--aside-left', aside: "organisms-media-aside" } %}
		{% endblock %}
	{% endembed %}
	{% embed 'molecules-accordion-panel' with { accordion_panel_headline : 'Aside Right' } %}
		{% block accordion_panel_content %}
			{% include 'organisms-editorial' with { editorial_style : 'editorial--aside-right', aside: "organisms-media-aside" } %}
		{% endblock %}
	{% endembed %}
	{% embed 'molecules-accordion-panel' with { accordion_panel_headline : 'Editorial'  } %}
		{% block accordion_panel_content %}
			{% include 'organisms-editorial' with { editorial_style : 'editorial--aside-only', hide_editorial : true, aside: "organisms-media-aside" } %}
		{% endblock %}
	{% endembed %}
{% endblock %}
