{% if links is empty %}
    {% set links = [
        {
            link_title: "Demo Link 1",
            jumplink_target: "demo-link-1"
        },
        {
            link_title: "Demo Link 2",
            jumplink_target: "demo-link-2"
        }
    ] %}
{% endif %}

<div class="sticky-wrapper">
    <div class="sticky-nav smoothscroll">
        <nav>
            <ul>
                {% for link in links %}
                <li><a href="#{{ link.jumplink_target }}">{{ link.link_title }}</a></li>
                {% endfor %}
                <li class="back-to-top"><a href="#top">Back to Top</a></li>
            </ul>
        </nav>
    </div>
</div>