{% set js_tabs_classes = [ 'js-tabs', tabs_variant ] %}
<div class="{{ js_tabs_classes|join(' ') }}">
    <ul class="js-tablist">
        {% block tabs_tabs %}
            {% for i in 1..3 %}
                {% include 'molecules-tab-tab' with { tab_target : "tab_" ~ i, tab_label : "Tab " ~ i } %}
            {% endfor %}
        {% endblock %}
    </ul>
    {% block tabs_panels %}
        {% for i in 1..3 %}
            {% include 'molecules-tab-panel' with { tab_panel_id : "tab_" ~ i } %}
        {% endfor %}
    {% endblock %}
</div>
