{% include 'organisms-main-header' with {
	center_header: true,
	tagline: "by creating an optional tagline for this center"
	}
%}

{% include 'organisms-hero' with {
	headline: 'This is a Headline for this Center',
	image: true
	} %}


{% embed 'molecules-page-section' %}

	{% block page_section_content %}

		{% include 'organisms-callout' with {
			action_link: true,
			icon: 'megaphone',
			callout_style_modifier: 'wide-layout action-buttonless'
		} %}

		{% include 'organisms-stats-list' with {
			buttons: [
				{
					button_text: 'All Data'
				}]
		} %}	
		

		{% include 'organisms-announcements' with {
			style_modifier: 'rainbow3',
			buttons: [
				{
					button_text: 'All Announcements'
				}]
		} %}


	{% endblock %}

	{% block page_section_sidebar %}

		{% include 'organisms-quicklinks' %}
		
		{% include 'organisms-events-list' with {
			events_list_style_modifier: 'narrow',
			events_superhead: 'Center Name',
			events_headline: 'Events',
			buttons: [
				{
					button_text: 'All Events'
				}]
		} %}

	{% endblock %}

{% endembed %}




{% include 'organisms-footer' %}