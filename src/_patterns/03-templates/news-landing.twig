{% include 'organisms-main-header' %}

{% include 'organisms-page-header' with {
	title: "News",
	tagline: "by telling the stories behind our research",
	page_header_modifier: "flatten"
} %}


{% include 'molecules-sticky-nav' with { 
	links: [
		{
			link_title: 'Recent News',
			jumplink_target: 'recent-news'
		},
		{
			link_title: 'Series Spotlight',
			jumplink_target: 'series-spotlight'
		},
		{
			link_title: 'Blog',
			jumplink_target: 'blog'
		},
		{
			link_title: 'Podcasts',
			jumplink_target: 'podcasts'
		},
		{
			link_title: 'Videos',
			jumplink_target: 'videos'
		}
	]
} %}


{% embed 'molecules-page-section' with { has_sidebar: false } %}

	{% block page_section_content %}



		{% include 'organisms-news-collection' with {
			news_collection_modifier: 'feature-grid',
			collection_headline: false,
			collection_jumplink_target: 'recent-news',
			feature_story: [
				{
					show_story_thumbnail: true,
					show_story_meta: true
				}],
			secondary_headline: 'Recent News',
			show_story_meta: true,
			story_media_type_randomize: true,
			buttons: [
				{
					button_text: 'More News'
				}]
		} %}



		{% include 'organisms-news-collection' with {
			collection_superhead: 'Series Spotlight',
			collection_headline: 'People Behind our Research',
			collection_jumplink_target: 'series-spotlight',
			collection_headline_modifier: 'section-title',
			collection_summary: true,
			num_stories: 3,
			show_story_meta: true,
			story_media_type: false,
			story_hide_meta_icon: true,
			show_story_thumbnails: true,
			story_thumbnail_type: 'widescreen',
			story_type_on_thumbnail: true,
			story_hide_meta_icon: true
		} %}


		{% include 'organisms-news-collection' with {
			collection_headline: 'From the Research Blog',
			collection_headline_modifier: 'section-title',
			collection_jumplink_target: 'blog',
			num_stories: 4,
			show_story_meta: true,
			story_media_type: false,
			story_hide_meta_icon: true,
			show_story_summaries: false,
			buttons: [
				{
					button_text: 'Visit the Blog',
					button_style: 'accent'
				}]
		} %}

		{% include 'organisms-news-collection' with {
			news_collection_modifier: 'feature-list',
			collection_headline: 'Podcasts',
			collection_headline_modifier: 'section-title',
			collection_jumplink_target: 'podcasts',
			feature_story: [
				{
					show_story_thumbnail: true,
					show_story_meta: true,
					story_media_type: 'podcast'
				}],
			num_stories: 3,
			story_show_large_media_icon: true,
			story_media_type: 'podcast',
			show_story_meta: true,
			story_media_type: false,
			story_hide_meta_icon: true,
			buttons: [
				{
					button_text: 'All Podcasts'
				},
				{
					button_text: 'Subscribe on iTunes',
					button_style: 'accent'
				}]
		} %}


		{% include 'organisms-news-collection' with {
			collection_headline: 'Videos',
			collection_headline_modifier: 'section-title',
			collection_jumplink_target: 'videos',
			num_stories: 4,
			show_story_meta: true,
			story_media_type: 'video',
			show_story_thumbnails: true,
			story_thumbnail_type: 'widescreen',
			story_type_on_thumbnail: true,
			story_hide_meta_icon: true,
			buttons: [
				{
					button_text: 'All Videos'
				},
				{
					button_text: 'Subscribe on YouTube',
					button_style: 'accent'
				}]
		} %}



	{% endblock %}

{% endembed %}

{% include 'organisms-social-callout' with {
	social_superhead: 'Stay up to date',
	social_headline: 'The latest in research at the University of Kentucky',
	social_callout_modifier: 'wide-layout'
}%}

{% include 'organisms-footer' %}