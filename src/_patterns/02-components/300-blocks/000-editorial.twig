<div class="editorial">
	{% if show_meta %}
		{% include 'molecules-content-meta' with {content_byline: true, content_date: true, content_taxonomy: true} %}
	{% endif %}

	{% block editorial_aside %}
		{% if aside is not empty %}
		<aside class="editorial__aside {{ aside_position|default('align-right') }}">
			{% include aside %}
		</aside>
		{% endif %}
	{% endblock %}
	{% block editorial_content %}
	<div class="editorial__content">
		{% include 'atoms-formatted-text' with { heading_frequency : 2, formatted_text_paragraphs : paragraphs|default(10) } %}
	</div>
	{% endblock %}
</div>
