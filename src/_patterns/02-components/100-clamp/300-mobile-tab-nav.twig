{% set tabs_variant = [ 'mobile-tab-nav', 'mobile-tab-nav--' ~ header_style|default('main') ] %}

{% embed 'molecules-tabs' with { tabs_variant: 'mobile-tab-nav'} %}
    {% block tabs_tabs %}
        {% include 'molecules-tab-tab' with { tab_target : "mobile_mainmenu", tab_label : "Main Menu" } %}
        {% include 'molecules-tab-tab' with { tab_target : "mobile_section", tab_label : "In This Section" } %}
    {% endblock %}
    {% block tabs_panels %}
        {% embed 'molecules-tab-panel' with { tab_panel_id : "mobile_mainmenu" } %}
            {% block tab_panel_content %}
                {% embed 'molecules-slab' %}
                    {% block slab_content %}
                        {% include 'molecules-global-nav' %}
                        {% include 'molecules-utility-nav' %}
                    {% endblock %}
                {% endembed %}
                {% include 'components-universal-header' with { ribbon_color: 'wildcat-blue' } %}
            {% endblock %}
        {% endembed %}
        {% embed 'molecules-tab-panel' with { tab_panel_id : "mobile_section" } %}
            {% block tab_panel_content %}
                {% include 'molecules-section-nav' %}
            {% endblock %}
        {% endembed %}
    {% endblock %}
{% endembed %}