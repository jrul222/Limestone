<header id="MainHeader">
{% embed 'molecules-slab' with { slab_variant: 'slab--wildcat-white' } %}
    {% block slab_content %}
        <div class="global-header">
            {% include 'molecules-lockup' %}
            {% include 'molecules-utility-nav' %}
            {% set toggle_config = {
                toggle: '#MobileNav',
                toggle_viz: true,
                toggle_toggled_label : 'Close',
                toggle_toggled_icon : 'close'
            } %}
            {% include 'molecules-toggle-button' with { icon_label_variant:'icon-label--stacked', toggle_button_variant: "button--transparent", label: 'Menu', icon: 'hamburger', data_obj : toggle_config } %}
        </div>
    {% endblock %}
{% endembed %}
{% embed 'molecules-slab' with { slab_variant: 'slab--dark-blue slab--thin global-nav-bar' } %}
    {% block slab_content %}
        {% include 'molecules-global-nav' %}
    {% endblock %}
{% endembed %}
{% embed 'molecules-slab' with { slab_variant: 'slab--blue-gray mobile-nav', props: ['hidden'], attrs: { id : 'MobileNav' } } %}
    {% block slab_content %}
        <div class="mobile-nav__controls">
            <button>Main Menu / Search</button>
            <button>In This Section</button>
        </div>
        <div class="mobile-nav__site">
            {% include 'molecules-global-nav' %}
            {% include 'molecules-utility-nav' %}
            {% include 'molecules-universal-nav' %}
        </div>
        <div class="mobile-nav__section">
            {% include 'molecules-section-nav' %}
        </div>
    {% endblock %}
{% endembed %}
</head>